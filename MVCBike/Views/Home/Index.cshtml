@model List<Bike>

<h2>Bike Ratings</h2>

<ul>
    <ul>
        @foreach (var bike in Model)
        {
            <li>
                @bike.Brand @bike.Model - Rating: @bike.Rating
                <form asp-action="Delete" asp-route-id="@bike.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this bike?');">
                    <button type="submit">Delete</button>
                </form>
            </li>
        }
    </ul>
</ul>

<a asp-action="Add">Add a Bike</a>