@model MVCBike.Models.Bike

<h2>Add a Bike</h2>

<form asp-action="Add" method="post">
    <div>
        <label asp-for="Brand">Brand:</label>
        <input asp-for="Brand" />
    </div>
    <div>
        <label asp-for="Model">Model:</label>
        <input asp-for="Model" />
    </div>
    <div>
        <label asp-for="Rating">Rating:</label>
        <input asp-for="Rating" type="number" />
    </div>
    <button type="submit">Add Bike</button>
</form>
