@model List<Scooter>

<div class="container mt-4">
    <h2 class="text-center">Scooter Ratings</h2>

    <ul class="list-unstyled mx-auto">
        @foreach (var scooter in Model)
        {
            <li class="mb-3 row">
                <div class="col">
                    @scooter.Brand @scooter.Model - Rating: @scooter.Rating
                </div>
                <div class="col-auto">
                    <form asp-action="DeleteScooter" asp-route-id="@scooter.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this scooter?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </li>
        }
    </ul>

    <div class="text-center">
        <a asp-action="AddScooter" class="btn btn-primary">Add a Scooter</a>
    </div>
</div>